# Contributor: IOTech <support@iotechsys.com>
# Maintainer: IOTech <support@iotechsys.com>
pkgname=iotech-iot
pkgver="$VER"
pkgrel=0
pkgdesc="IOT C Framework"
url="www.iotechsys.com"
arch="$ARCH"
license="Apache-2.0"
depends=""
install=""
base="iotech-iot-${VER}_${ARCH}"
source="${base}.tar.gz"
builddir="$srcdir/"
options="!check !strip !tracedeps !fhs"

package() {
  cd "$builddir"
  if [ -z "$pkgdir" ]
  then
    dest=/opt/iotech/iot
  else
    dest=$pkgdir
  fi
  install -Dm755 ${base}/lib/libiot.so ${dest}/lib
  install -Dm755 ${base}/lib/libiot.a ${dest}/lib
  mkdir -p ${dest}/include/iot/
  cp -r ${base}/include/* ${dest}/include/
}
