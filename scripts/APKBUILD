# Contributor: IOTech <support@iotechsys.com>
# Maintainer: IOTech <support@iotechsys.com>
pkgname=iotech-iot
pkgver="$VER"
pkgrel=0
pkgdesc="IOTech C utilities"
url="www.iotechsys.com"
arch="$ARCH"
license="Apache-2.0"
depends=""
install=""
source="iotech-iot-${VER}_${ARCH}.tar.gz"
builddir="$srcdir/"
options="!check !strip !tracedeps"

package() {
  cd "$builddir"
  install -Dm755 iotech-iot-"$VER"_"$ARCH"/lib/libiotech-iot.so "$pkgdir"/usr/lib/libiotech-iot.so
  install -Dm755 iotech-iot-"$VER"_"$ARCH"/lib/libiotech-iot.a "$pkgdir"/usr/lib/libiotech-iot.a
  mkdir -p "$pkgdir"/usr/include/iot/
  cp -r iotech-iot-"$VER"_"$ARCH"/include/* "$pkgdir"/usr/include/
}
